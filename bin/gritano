#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
$LOAD_PATH.unshift(File.dirname(__FILE__))

require 'gritano'

require 'etc'

console = Gritano::Console::Gritano.new(STDIN)
begin
  output = console.execute(ARGV)
  if output[0]
    puts output[1]
  else
    puts "error: #{output[1]}"
  end
rescue
  puts console.execute(["help"])
end
